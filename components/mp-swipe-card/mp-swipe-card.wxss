/* components/mp-swipe-card/mp-swipe-card.wxss */

.swipe-card-container {
  width: 100%;
  height: 100%;
  position: relative;
  perspective: 1000px;
  perspective-origin: center;
  transform-style: preserve-3d;
  backface-visibility: true;
}

.swipe-card-item,
.placeholder-0,
.placeholder-1,
.placeholder-2 {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  position: absolute;
  background: #fff;
}

.placeholder-0 {
  transform: translate3d(0, 0, -1); 
  box-shadow: 1px 1px 1px 1px rgba(0, 0, 0, .1);
}
.placeholder-1 {
  transform: translate3d(0, 30rpx, -30rpx); 
  box-shadow: 1px 1px 1px 1px rgba(0, 0, 0, .1);
}

.placeholder-2 {
  transform: translate3d(0, 60rpx, -60rpx); 
  box-shadow: 1px 1px 1px 1px rgba(0, 0, 0, .1);
}


